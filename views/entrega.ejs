<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.8/css/boxicons.min.css' rel='stylesheet'>
    <title>Hello, world!</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <img class="navbar-brand" src="/imagen/unnamed.jpg" alt="">
            <a class="navbar-brand" href="/">YobelSCM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/entrega">Entrega</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/devolucion">Devolución</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/crudpda">Pda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--NUEVA ENTREGA-->
    <div class="modal fade" id="exampleModalNuevo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nueva Entrega</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/save" method="POST">
                        <div class="mb-3">
                            <label for="user" class="form-label">COD/DNI</label>
                            <input type="text" class="form-control" id="idusuario" name="idusuario" tabindex="1">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">SERIE PDA</label>
                            <input type="text " class="form-control " id="seriepda " name="seriepda " tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">CARGO</label>
                            <input type="text " class="form-control " id="cargo " name="cargo" tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">PROCESO</label>
                            <input type="text " class="form-control " id="proceso " name="proceso " tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">TURNO</label>
                            <select id="turno" name="turno" class="form-select" tabindex="2">
                                <option value="1er" selected>1er</option>
                                <option value="2er">2er</option>
                                <option value="3er">3er</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="/entrega" class="btn btn-secondary">Cancelar</a>
                    <a href="/entrega" class="btn btn-primary">Guardar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <div class="container">
        <h1 class="mt-3">Entrega</h1>
        <a class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModalNuevo" data-bs-whatever="@mdo">Nuevo</a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">COD / DNI</th>
                    <th>FECHA</th>
                    <th>HORA</th>
                    <th>SERIE PDA</th>
                    <th>NOMBRE PDA</th>
                    <th>NOMBRE USUARIO</th>
                    <th>CARGO</th>
                    <th>PROCESO</th>
                    <th>TURNO</th>
                    <th>ACCION</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((control)=> { %>
                    <tr>
                        <td>
                            <%=control.idusuario %>
                        </td>
                        <td>
                            <%=control.fecha %>
                        </td>
                        <td>
                            <%=control.hora %>
                        </td>
                        <td>
                            <%=control.seriepda %>
                        </td>
                        <td>
                            <%=control.nompda %>
                        </td>
                        <td>
                            <%=control.nomusu %>
                        </td>
                        <td>
                            <%=control.cargo %>
                        </td>
                        <td>
                            <%=control.proceso %>
                        </td>
                        <td>
                            <%=control.turno %>
                        </td>
                        <td>
                            <a class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exampleModalEditar" data-bs-whatever="@mdo">editar</a>
                            <!--<a href="/edit" class="btn btn-outline-info">editar</a>-->
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!--EDITAR SALIDA-->
    <div class="modal fade" id="exampleModalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="user" class="form-label">COD/DNI</label>
                            <input type="text" class="form-control" id="user" name="codni" tabindex="1">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">SERIE PDA</label>
                            <input type="text " class="form-control " id="user " name="seriepda " tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">CARGO</label>
                            <input type="text " class="form-control " id="user " name="cargo " tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">ÁREA</label>
                            <input type="text " class="form-control " id="user " name="area " tabindex="1 ">
                        </div>
                        <div class="mb-3 ">
                            <label for="user " class="form-label ">TURNO</label>
                            <select id="turno" name="turno" class="form-select" tabindex="2">
                            <option value="1er" selected>1er</option>
                            <option value="2er">2er</option>
                            <option value="3er">3er</option>
                        </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="/entrega" class="btn btn-secondary">Cancelar</a>
                    <a href="/entrega" class="btn btn-primary">Guardar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>